<div class="cart-hero-unit order-hero-unit">
  <div class="container text-center hero-container">
    <h1>get yo tickets.</h1>
  </div>
</div><br><br>
<div id="product" class="container">
  <div class="row">
    <div class="col-sm-4">
      <h3 class="shopping-cart-title">Shopping Cart</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-7">
      <% @cart.listings.each do |listing| %>
      <div class="cart-product">
        <div class="row">
          <div class="col-xs-5">
            <div class="cart-image">
              <%= image_tag(listing.event.image.url(:show), class: "event-image-sm img-responsive") %>
            </div>
            <h5><%= link_to "remove from cart", '#' %></h5>
          </div>
          <div class="col-xs-4 col-sm-7">
            <div class="row">
              <p class="product-title"><%= listing.event.name %></p>
              <h3 class="product-price">price: <%= listing.view_price %></h3>
              <h3 class="product-seat">row: <%= listing.view_row %></h3>
              <h3 class="product-seat">quantity: <%= listing.count_tickets %></h3>
              <div id="quantity-dropdown" class="row text-left">
                <div class="form-inline">
                  <%= form_tag() do %>
                    <input type="hidden" name="_method" value="patch">
                    <div class="col-xs-6 col-sm-4 col-md-3">
                      <%= select_tag "quantity", options_for_select([*1..10]), {class: "form-control form-control-sm"} %>
                    </div>
                    <div class="text-left">
                      <%= submit_tag "Update", class:"btn btn-little-owl"%>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-sm-4 col-sm-offset-1 text-center checkout-con">
      <div class="cart">
        <div class="product-header">
          <h3>Order Subtotal (<%= @cart.count %> items)</h3>
        </div>
        <h1 class="cart-total">$<%= cart_total(@cart.listings) %></h1>
        <div class="checkout">
          <% if current_user %>
            <%= link_to "Checkout", '#', class:"btn btn-checkout form-control" %>
          <% else %>
            <%= link_to "Checkout", '#', class:"btn btn-checkout form-control" %>
          <% end %>
        </div>
        <h4>or</h4>
        <div class="continue-shopping">
          <%= link_to "Continue Shopping", '#', class:"btn btn-primary form-control" %>
        </div>
      </div>
    </div>
  </div>
</div>

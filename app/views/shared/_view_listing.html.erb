<div class="panel panel-default">
  <div class="panel-heading"> Listing number: <%= listing.id %> </div>
    <div id="listing-<%= listing.id %>", class="panel-body">
      row: <%= listing.view_row %> <span class="tab-space"> quantity: <%= listing.count_tickets %></span> <span class="tab-space">price: <%= listing.view_price %></span>
      <%= form_tag(cart_tickets_path(listing_id: listing.id), method: "post") do %>

        <div class="col-xs-3 col-sm-3 col-md-3 form-inline">
           seats: <%= select_tag "seats", options_for_select(listing.seats), {multiple: true, class: "form-control form-control-sm dropdown-toggle"} %>
         </div>
        <%= submit_tag "add to cart!", class: "btn btn-default btn-success listing-cart"%>
      <% end %>
    </div>
</div>

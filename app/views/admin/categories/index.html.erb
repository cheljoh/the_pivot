
<h3 class="inactive-<%= params[:inactive] %> admin-product-index-header">all categories</h3>
<br>
<p><%=link_to "new category", new_admin_category_path%></p>
<br>
<div class="table-responsive">
  <table class="table table-hover table-condensed table-products">
    <thead>
      <tr>
        <th class="col-md-4 col-md-offset-3 text-center">name</th>
        <th class="col-md-2"></th>
      </tr>
    </thead>
    <tbody>
    <% 6.times do |n|%>
      <tr>
        <td class="col-md-4 col-md-offset-3 text-left"><input type="text" value="Category <%="#{n}"%>" name="category[name]" class="text-left"></td>
        <td class="col-md-2">
          <button class="btn btn-checkout btn-s text-center">update category</button>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<h3>upcoming events</h3>
<div class="row">
  <div class="col-sm-3">
    <%= form_tag "#", method: 'get' do %>
      <div class="form-group">
        <%= text_field_tag :date, params[:date], placeholder: "search by date", class: "form-control form-control-sm search-form"%>
        <button class="btn btn-little-owl btn-sm">search by date</button>
      </div>
    <% end %>
  </div>
  <div class="col-sm-3">
    <%= form_tag "#", method: 'get' do %>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], placeholder: "search by venue", class: "form-control form-control-sm search-form"%>
        <button class="btn btn-little-owl btn-sm">search by venue</button>
      </div>
    <% end %>
  </div>
</div>
<br>
<p><a href="#">See all events</a></p>
<div class="table-responsive">
  <table class="table table-hover table-condensed table-bordered">
    <thead>
      <tr class="text-align-center">
        <th></th>
        <th></th>
        <th>event</th>
        <th>date</th>
        <th>time/venue</th>
        <th>category</th>
        <th>tags</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
          <tr class="text-align-center">
            <td><%= image_tag(event.image.url(:index), class: "event-image-small") %></td>
            <td>
              <%= button_to "create listing", new_user_listing_path(current_user), method: :get, class:"btn btn-primary", :params => {event: event} %>
            </td>
            <td><%= event.name %></td>
            <td><%= event.format_date %></td>
            <td><%= event.format_time %> at <%= event.venue.name %></td>
            <td><%= event.category.name %></td>
            <td>event_tags</td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

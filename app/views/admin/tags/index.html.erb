<h3 class="inactive-<%= params[:inactive] %> admin-product-index-header">all tags</h3>
<br>
<p><%=link_to "new tag", new_admin_tag_path%></p>
<br>
<div class="table-responsive">
  <table class="table table-hover table-condensed table-products">
    <thead>
      <tr>
        <th class="col-md-2 text-center">id</th>
        <th class="col-md-4 text-center">name</th>
        <th class="col-md-2"></th>
        <th class="col-md-2"></th>
      </tr>
    </thead>
    <tbody>
    <% 6.times do |n|%>
      <tr>
        <td class="col-md-2"><%= link_to "#{n}", "/admin/tags/1", class: "text-left"%></td>
        <td class="col-md-4"><input type="text" value="Tag <%="#{n}"%>" name="tag[name]" class="text-left"></td>
        <td class="col-md-2">
          <button class="btn btn-checkout btn-s text-center">update tag</button>
        </td>
        <td class="col-md-2">
          <button class="btn btn-danger btn-s text-center">delete tag</button>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<tr id="category-<%= category.id %>">
  <%= form_for [:admin, category] do |f| %>
    <td class="col-md-4 col-md-offset-3 text-left">
      <%= f.text_field :name, value: "#{category.name}" %>
    </td>
    <td class="col-md-2">
      <%= f.submit "update category", class: "btn btn-checkout btn-s text-center" %>
    </td>
  <% end %>
</tr>

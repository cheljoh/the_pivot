<div class="order-hero-unit order-history-hero-unit">
  <div class="container text-center hero-container">
    <h1>orders.</h1>
  </div>
</div><br>
<div id="orders" class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="table-responsive">
        <table class="table table-hover table-condensed table-products">
          <thead>
            <tr>
              <th class="text-center">order</th>
              <th class="text-center">date</th>
              <th class="text-center">status</th>
              <th class="text-center">total</th>
              <th></th>
            </tr>
          </thead>
          <% 3.times do %>
            <tr>
              <td><h4>111</h4></td>
              <td><h4>November 20, 2009</h4></td>
              <td><h4>paid</h4></td>
              <td><h4>$300</h4></td>
              <td><h4><%= link_to "details", "#" %></h4></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
